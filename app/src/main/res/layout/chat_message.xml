<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/botLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/botName"
        android:layout_width="@dimen/character_circle_diameter"
        android:layout_height="@dimen/character_circle_diameter"
        android:layout_marginTop="@dimen/character_name_vertical_margin"
        android:background="@drawable/circle"
        android:textColor="@color/charName"
        android:textSize="@dimen/character_text_size"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="@string/bot_name"/>

    <TextView
        android:id="@+id/botTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:layout_marginBottom="@dimen/activity_inner_vertical_margin"
        android:layout_marginLeft="@dimen/activity_inner_horizontal_margin"
        android:layout_marginStart="@dimen/activity_inner_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_inner_horizontal_margin"
        android:layout_marginRight="@dimen/message_trailing_margin"
        android:padding="@dimen/activity_inner_padding"
        android:textColor="@color/messageText"
        android:text="@string/fpo_message"
        android:textAlignment="viewStart"
        android:gravity="start"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/youName"
        android:layout_width="@dimen/character_circle_diameter"
        android:layout_height="@dimen/character_circle_diameter"
        android:layout_marginTop="@dimen/character_name_vertical_margin"
        android:background="@drawable/circle"
        android:textColor="@color/charName"
        android:textSize="@dimen/character_text_size"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="@string/you_name"
        />

</LinearLayout>
